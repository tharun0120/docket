{
  "name": "docket",
  "version": "1.0.0",
  "description": "Docket - An Improved TODO APP",
  "main": "index.js",
  "scripts": {
    "start": "node src/index.js",
    "build": "cd ./client && npm install && npm run build",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "client": "npm run start --prefix ./client",
    "server": "cross-env NODE_ENV=Development nodemon ./src/index",
    "dev": "concurrently \"npm run client\" \"npm run server\""
  },
  "author": "Tharun Kumar",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "concurrently": "^7.0.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "mongodb": "^3.6.8",
    "mongoose": "^5.12.12",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "path": "^0.12.7",
    "react": "^17.0.2",
    "sharp": "^0.28.3",
    "validator": "^13.6.0"
  },
  "devDependencies": {
    "env-cmd": "^10.1.0",
    "nodemon": "^2.0.7"
  }
}
